{% extends 'base.html.twig' %}

{% block title %} {{ page }}{% endblock %}

{% block body %}
    {% if projet %}
        <div class="row">
            <div class="col-md-12">
                <div class="kt-portlet pd-20">
                    <div class="col-md-8">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-4">
            <a href="/projets" class="btn btn-dark">Retour vers la liste des projets</a>
            {% if is_granted('ROLE_ADMIN') %}
                <button class="btn btn-dark"> Attribuer des tâches à ce projet </button>
            {% endif %}
        </div>

    {% endif %}
{% endblock %}



